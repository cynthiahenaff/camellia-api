{
  "compilerOptions": {
    "target": "es2019",
    "allowJs": true,
    "strict": false,
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
